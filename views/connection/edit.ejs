<%- include('../partials/header.ejs') %>
    <!--
        main section
    -->
    <main>
        <Section class="new_event">
            <h2 class="new-event-heading">About the Event</h2>
            <div class="new-event-input-container">
                <form method="POSt">
                    <label  class="event-input-lable">Category</label><br>
                    <input type="text" name="category" class="event-input" value="<%= output.category%>" required>
                    <br>
                    <label  class="event-input-lable">Title</label><br>
                    <input type="text" name="title" class="event-input" value="<%= output.title%>" required>
                    <br>
                    <label  class="event-input-lable">Host Name</label><br>
                    <input type="text" name="hostName" class="event-input" value="<%= output.hostName%>" required>
                    <br>
                    <label  class="event-input-lable">Details</label><br>
                    <textarea name="details" cols="30" rows="6" ><%= output.details%></textarea>
                    <br>
                    <label  class="event-input-lable">Where</label><br>
                    <input type="text" name="location" class="event-input" value="<%= output.location%>" required>
                    <br>
                    <label  class="event-input-lable">When</label><br>
                    <input type="date" name="date" class="event-input" value="<%= output.date%>" required>
                    <br>
                    <label  class="event-input-lable">Start</label><br>
                    <input type="time" name="startTime" class="event-input" value="<%= output.startTime%>" required>
                    <br>
                    <label  class="event-input-lable">End</label><br>
                    <input type="time" name="endTime" class="event-input" value="<%= output.endTime%>" required>
                    <br>
                    <label  class="event-input-lable">Image URL</label><br>
                    <input type="url" name="image" class="event-input" placeholder="Image URL" value="<%= output.image%>" required>
                    <br><br>
                    <button formaction="/connections/<%= output.id%>?_method=PUT">Edit Event</button>
                </form>
            </div>
        </Section>
    </main>
    <!--
        footer section
    -->
    <%- include('../partials/footer.ejs') %>